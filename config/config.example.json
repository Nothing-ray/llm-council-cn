{
  "$schema": "./config.schema.json",
  "version": "1.0.0",
  "providers": {
    "openrouter": {
      "enabled": true,
      "api_url": "https://openrouter.ai/api/v1/chat/completions",
      "api_key_env": "OPENROUTER_API_KEY",
      "models": {
        "council": [
          "openai/gpt-5.1",
          "google/gemini-3-pro-preview",
          "anthropic/claude-sonnet-4.5",
          "x-ai/grok-4"
        ],
        "chairman": "google/gemini-3-pro-preview",
        "title_generator": "google/gemini-2.5-flash"
      }
    },
    "openai": {
      "enabled": false,
      "api_url": "https://api.openai.com/v1/chat/completions",
      "api_key_env": "OPENAI_API_KEY",
      "models": {
        "council": ["gpt-4o", "gpt-4-turbo"],
        "chairman": "gpt-4o",
        "title_generator": "gpt-3.5-turbo"
      }
    },
    "anthropic": {
      "enabled": false,
      "api_url": "https://api.anthropic.com/v1/messages",
      "api_key_env": "ANTHROPIC_API_KEY",
      "models": {
        "council": ["claude-sonnet-4-20250514"],
        "chairman": "claude-sonnet-4-20250514",
        "title_generator": "claude-haiku-3-5-20250307"
      }
    }
  },
  "storage": {
    "type": "json",
    "data_dir": "data/conversations"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8001,
    "cors_origins": [
      "http://localhost:5173",
      "http://localhost:3000"
    ]
  }
}
